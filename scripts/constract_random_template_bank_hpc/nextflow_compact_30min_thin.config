params
{
    nfiles=20
    tobs=30 //min
    porb_min=60 //min
    porb_max=300 //min
    max_companion_mass=4.0
    min_pulsar_mass=1.2
    spin_period=2.5 //ms
    inclination_angle_fraction=1.0
    coverage=0.9
    mismatch=0.15
    templates=119230000
    burnin=131
    thin=31
    nwalkers=1500
    output_prefix="compact_30min_thin"
}

executor {
        name = 'condor'               
        queueSize = 1500               // Maximum number of jobs submitted at once
    }

process {
    cache = 'lenient'

    withLabel: 'emcee' {
        cpus=128
        memory = { 12.GB * task.attempt }
        time = { 4.days * task.attempt }
        //maxForks = 20
        errorStrategy = { task.exitStatus in (137..140) || task.exitStatus == 124 ? 'retry' : 'ignore' }
        maxRetries = 3
        scratch=false
    }
}